# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Run unit tests for BibleAtlasTests"
  lane :tests do
    scan(
      scheme: "BibleAtlas",                    # ✅ 앱 스킴 이름
      workspace: "BibleAtlas.xcworkspace",     # ✅ 워크스페이스 쓴다면
      clean: true,
      only_testing: [
        "BibleAtlasTests"                      # ✅ 테스트 타겟 이름
      ],
      code_coverage: true,
      xcargs: "-parallel-testing-enabled YES -parallel-testing-worker-count 4"
    )
   end
end
